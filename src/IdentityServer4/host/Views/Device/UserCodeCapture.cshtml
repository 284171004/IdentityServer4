@model string

<div class="page-header">
  <h1>
    User Code
  </h1>
  <p>
    Please enter the code displayed on your device
  </p>
  <form class="form-inline" asp-action="UserCodeCapture" method="post">
    <input class="form-control mr-2" for="userCode" name="userCode" />
    <button class="btn btn-primary">Submit</button>
  </form>
</div>